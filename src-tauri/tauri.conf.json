{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ssh",
    "version": "0.4.0",
    "identifier": "com.aiden.ssh",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "ssh",
                "width": 1920,
                "height": 1080,
                "fullscreen": false,
                "maximized": true,
                "resizable": true,
                "decorations": true,
                "transparent": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/icon.icns", "icons/icon.ico"]
    }
}
